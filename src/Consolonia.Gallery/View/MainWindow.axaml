        xmlns:gridThemes="clr-namespace:Consolonia.Themes;assembly=Consolonia.Controls.DataGrid"
        xmlns:ManagedWindowThemes="clr-namespace:Consolonia.Themes;assembly=Consolonia.ManagedWindows"
        xmlns:dataGrid="https://github.com/consolonia"
        xmlns:managedWindows="clr-namespace:Consolonia.ManagedWindows;assembly=Consolonia.ManagedWindows"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
